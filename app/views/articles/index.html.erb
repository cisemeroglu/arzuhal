<a href="<%=user_url(@user)%>"><img style="width:128px"   src="../../assets/kedi<%= @user.id %>.jpg" ></a>
<div><%= @user.fullname %></div>

<% @articles.each do |article| %>
    <p><%=article.created_at.strftime("%F %H:%M")%></p>
    <p><%= article.body %></p>
    <%= link_to "delete",user_article_path(@user,article),method: :delete %>

<% end %>


<%= form_for ([@user,@newarticle]) do |f| %>

    <p>
      <h1> Add new tweet</h1>

      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit "ADD" %>
    </p>

<% end %>


